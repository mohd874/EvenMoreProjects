        myFrame.setVisible(true);
    }
    
    public void paintComponent(Graphics g) {
        super.paintComponent(g);
        synchronized(items) {
            for(int a=0;a<items.height;a++)
                for(int b=0;b<items.width;b++) {
                    BufferedImage tempImage = items.getImage(b,a);
                    if(tempImage!=null)
                        g.drawImage(tempImage,b*50,a*50,null);
                }
        }
        g.setColor(Color.WHITE);
        for(int a=1;a<items.width;a++)
            g.drawLine(a*50, 0, a*50, 200);
        for(int b=1;b<items.height;b++)
            g.drawLine(0, b*50, 300, b*50);
    }
    
    public void update(Backpack b) {
        if(this.items==null&&b!=null)
        {
            this.items=b;
            this.setVisible(true);
            repaint();
            owner.repaint();
            return;
        }
            
        synchronized(items) {
            if(b==null) {
                this.items = null;
                this.setVisible(false);
            }
            else {
                this.items = b;
                this.setVisible(true);
            }
        }
        repaint();
        owner.repaint();
    }
    
