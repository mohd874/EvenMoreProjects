public class InventoryPanel extends javax.swing.JPanel {
    Backpack items;
    PlayerInventoryPanel owner;
    
    /** Creates new form InventoryPanel */
    public InventoryPanel(PlayerInventoryPanel owner) {
        initComponents();
        this.owner = owner;
        this.setVisible(false);
    }
    
