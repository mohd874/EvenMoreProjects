    }//GEN-END:initComponents
    
    private void formMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_formMouseClicked
        System.out.println(evt.getPoint());
        synchronized(items) {
            if(owner.itemHeld==null) {
                owner.itemHeld = items.removeItem(evt.getX()/50,evt.getY()/50);
                if(owner.itemHeld==null)
                    return;
                Cursor tempCursor = Toolkit.getDefaultToolkit().createCustomCursor(owner.itemHeld.getModel().image,new Point(0,0),"itemCursor");
                owner.setCursor(tempCursor);
            }
            else {
                if(items.insertItem(owner.itemHeld,evt.getX()/50,evt.getY()/50)) {
                    owner.itemHeld=null;
                    owner.setCursor(Cursor.getDefaultCursor());
                }
            }
        }
        //repaint();
        owner.repaint();
        // Add your handling code here:
    }//GEN-LAST:event_formMouseClicked
    
    public static void main(String args[]) {
        JFrame myFrame = new JFrame();
